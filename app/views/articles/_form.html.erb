<div class="formWrapper">
  <div class="col-xs-4">
    <div class="row">
      <%= form_for(@article) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Preferably an Harry Potter character', required: true%>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control', 'data-editor': "markdown", rows: 10, placeholder: 'Preferably an Harry Potter quote', required: true %>
      </div>
      <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
