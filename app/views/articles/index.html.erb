
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="navBarWrapper">
      <%= link_to("Create new Article", new_article_path, class: "btn btn-primary") %>
    </div>
  </nav>
</div>

<div class=article-list>
  <ul>
    <% @articles.each do |article| %>
    <li>
      <h3><%= link_to(article.title,article_path(article)) %></h3>
      <p><%= article.content %></p>
      <%= link_to('<i class="fas fa-edit"></i>'.html_safe, edit_article_path(article)) %>
      <%= link_to('<i class="fas fa-trash-alt"></i>'.html_safe, article_path(article), method: :delete, data: { confirm: "Are you sure?" }) %>
    </li>
    <% end %>
  </ul>
</div>
